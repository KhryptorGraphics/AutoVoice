{
  "title": "AutoVoice Monitoring Dashboard",
  "tags": ["autovoice", "voice-synthesis", "gpu"],
  "timezone": "browser",
  "refresh": "30s",
  "schemaVersion": 38,
  "version": 2,
  "panels": [
    {
      "id": 1,
      "title": "HTTP Requests per Second",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "rate(autovoice_http_requests_total[5m])",
          "legendFormat": "{{method}} {{endpoint}} ({{status}})"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "fillOpacity": 10,
            "showPoints": "never"
          }
        }
      }
    },
    {
      "id": 2,
      "title": "Active WebSocket Connections",
      "type": "stat",
      "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
      "targets": [
        {
          "expr": "autovoice_active_websocket_connections"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 5, "color": "yellow"},
              {"value": 8, "color": "red"}
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "title": "GPU Utilization",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "targets": [
        {
          "expr": "autovoice_gpu_utilization_percent",
          "legendFormat": "GPU {{device_id}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "fillOpacity": 10,
            "showPoints": "never"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 80, "color": "yellow"},
              {"value": 90, "color": "red"}
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "Synthesis Duration (p95)",
      "type": "stat",
      "gridPos": {"h": 8, "w": 6, "x": 12, "y": 8},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(autovoice_synthesis_duration_seconds_bucket[5m]))"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 0.1, "color": "yellow"},
              {"value": 0.5, "color": "red"}
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "title": "GPU Memory Usage",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
      "targets": [
        {
          "expr": "autovoice_gpu_memory_used_bytes / (1024*1024*1024)",
          "legendFormat": "GPU {{device_id}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "decgbytes",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "fillOpacity": 20,
            "showPoints": "never"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 6, "color": "yellow"},
              {"value": 7, "color": "red"}
            ]
          }
        }
      }
    },
    {
      "id": 6,
      "title": "Error Rate",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
      "targets": [
        {
          "expr": "rate(autovoice_http_requests_total{status=~\"5..\"}[5m])",
          "legendFormat": "5xx errors"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "fillOpacity": 10,
            "showPoints": "never"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": 0, "color": "green"},
              {"value": 0.1, "color": "yellow"},
              {"value": 1, "color": "red"}
            ]
          }
        }
      }
    }
  ]
}
